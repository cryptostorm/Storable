<% if message.user.id == @current_user.id %>
	<div class="message" style="background-color: #D9D9D9; padding: 10px; <%= 'border-top: 1px solid #404040;' if message.id == @conversation.messages.last.id %> border-bottom: 1px solid #404040; font-size: 12px; min-height: 50px">
		<a style="float: left; width: 50px; display: block;" href=<%= user_path(message.user) %>>
			<img class="user-photo" src="<%= message.user.profile_photo %>" width="50px" height="50px" style="padding: 0px 0px 10px 0; float: left;">
			</img>
		</a>
		<span style="float: right; display: block; width: 720px">
			<%= raw(message.content) %>
			<div class="date" style="margin-top: 3px;"><%= Time.zone.parse(message.created_at.to_s).utc %>
			</div>
		</span>
		<div class="clearfix"></div>
	</div>
<% else %>
	<div class="message" style="background-color: #D9D9D9; padding: 10px; <%= 'border-top: 1px solid #404040;' if message.id == @conversation.messages.last.id %> border-bottom: 1px solid #404040; font-size: 12px; min-height: 50px; text-align: right; margin-right: 0px; width: 780px ">
		<%= raw(message.content) %>
		<a href=<%= user_path(message.user) %>>
			<img class="user-photo" src="<%= message.user.profile_photo %>" width="50px" height="50px" style="padding: 0 0px 20px 20px; float: right;">
			</img>
		</a>
		<div class="date">
			<%= Time.zone.parse(message.created_at.to_s).utc %>
		</div>
	</div>
<% end %>