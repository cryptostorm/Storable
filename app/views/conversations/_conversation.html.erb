<% user_starred = @current_user.id == conversation.renter_id ? conversation.renter_starred : conversation.host_starred %>
<% user_type_id = @current_user.id == conversation.renter_id ? "renter_id" : "host_id" %>
<div id="<%=conversation.id %>" class="conversation" style='height: 64px; overflow: hidden; text-overflow: ellipsis;'>
	<div class="profile">
		<a href='<%= user_path(other) %>'><img class="message-photo" src=<%= profile_picture_for(other) %> width="50px" height="50px" style="vertical-align: middle; margin-top: 10px; position: absolute;"></img></a>
		<div style="text-overflow: ellipsis; overflow: hidden; font-size: 12px; display: inline-block; width: 90px; height: 50px; margin-left: 60px; margin-top: 13px;">
		<%= pretty_name(other) %>
		</div>
	</div>
	<div class="other">
		<% listing = conversation.listing %>
		<div class="synopsis"><a href=<%= conversation_path(conversation) %>><%= conversation.messages.last.content %></a></div>
		<div class="address"><%= listing.location.street %>, <%= listing.location.city %>, <%= listing.location.state %> <%= listing.location.zip %>
		</div>
	</div>
	<div class="icons">
		<div class="star">
			<% if user_starred %>
				<i class="star-icon icon-star icon-3x"></i>
			<% else %>
				<i class="star-icon icon-star-empty icon-3x"></i>
			<% end %>
		</div>
	</div>
	<div class="subject">Regarding: <%= link_to conversation.listing.title, listing_path(conversation.listing) %>
	</div>
	<div class="clearfix"></div>
</div>